<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="dnd@catbo.net">
  <schema id="org.gnome.shell.extensions.adnts@n.darazaki" path="/org/gnome/shell/extensions/adnts@n.darazaki/">
    <key type="u" name="time-check-period">
      <default>2000</default>
      <summary>Period at which the time of the day is checked (in ms)</summary>
    </key>
    <key type="s" name="day-theme">
      <default>'Adwaita'</default>
      <summary>Day theme's name</summary>
    </key>
    <key type="s" name="night-theme">
      <default>'Adwaita-dark'</default>
      <summary>Night theme's name</summary>
    </key>
    <key type="s" name="day-shell">
      <default>''</default>
      <summary>Day shell theme's name</summary>
    </key>
    <key type="s" name="night-shell">
      <default>''</default>
      <summary>Night shell theme's name</summary>
    </key>
    <key type="b" name="shell-enabled">
      <default>false</default>
      <summary>If automatic shell theme switching is enabled</summary>
    </key>
    <key type="u" name="nighttime-begin">
      <!-- 20:00 / 8 pm -->
      <default>1200</default>
      <summary>Time at which the theme should begin being the night theme (in minutes)</summary>
    </key>
    <key type="u" name="nighttime-end">
      <!-- 8:00 / 8 am -->
      <default>480</default>
      <summary>Time at which the theme should stop being the night theme (in minutes)</summary>
    </key>
  </schema>
</schemalist>
